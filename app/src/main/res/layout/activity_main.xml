<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/edited"
    android:foregroundTint="#FFDD00"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/edited"
        android:scaleType="centerCrop" />

    <!-- Semi-Transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000" />


    <Button
        android:id="@+id/CaptureBtn"
        style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        android:layout_width="218dp"
        android:layout_height="82dp"
        android:backgroundTint="@color/yellow"
        android:background="@color/yellow"
        android:elevation="5dp"
        android:text="Capture Trash"
        android:textSize="23dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/SubmitBtn"
        style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        android:layout_width="218dp"
        android:layout_height="82dp"
        android:backgroundTint="#FFFF00"
        android:text="Submit"
        android:textSize="23dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702" />

    <ImageView
        android:id="@+id/rock"
        android:layout_width="377dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:src="@drawable/rock"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <ImageView
        android:id="@+id/trash"
        android:layout_width="265dp"
        android:layout_height="285dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/SubmitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/finaltxt"
        android:layout_width="251dp"
        android:layout_height="164dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="You're making a   difference !!"
        android:textColor="#39FF14"
        android:textSize="48sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389" />

    <Button
        android:id="@+id/final_back"
        android:layout_width="177dp"
        android:layout_height="78dp"


        android:layout_marginTop="141dp"

        android:layout_marginBottom="208dp"
        android:backgroundTint="#f5e5c4"
        android:gravity="center"
        android:text="More ?"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/finaltxt"
        app:layout_constraintVertical_bias="0.53" />


</androidx.constraintlayout.widget.ConstraintLayout>